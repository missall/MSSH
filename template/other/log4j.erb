### set log levels - for more verbose logging change 'INFO' to 'DEBUG' ###
log4j.rootLogger=info,stdout,file
log4j.logger.com.opensymphony.xwork2=error
log4j.logger.org.hibernate=error,debug
log4j.logger.org.springframework=error,debug
log4j.logger.org.apache=error,debug
log4j.logger.com.mchange=info,debug
#
#### direct log messages to stdout ###
log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.Target=System.out
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss} - %c  %x %m%n
#
#### direct log messages to debug ###
log4j.appender.debug=org.apache.log4j.ConsoleAppender
log4j.appender.debug.Target=System.out
log4j.appender.debug.layout=org.apache.log4j.PatternLayout
log4j.appender.debug.layout.ConversionPattern=%d - %c -%-4r [%t] %-5p %c %x - %m%n
