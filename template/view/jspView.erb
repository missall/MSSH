<!doctype html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8"/>
</head>
<body>
  <!-- 头部导航信息 -->
  <header><jsp:include page="/WEB-INF/jsp/layout/header.jsp" /></header>
  <div class="row">
    <!-- 左侧导航信息 -->
    <div class="col-xs-2 left"><jsp:include page="/WEB-INF/jsp/layout/left.jsp"/></div>
    <!-- main主界面  -->
    <div class="col-xs-10 main">
      <ol class="breadcrumb">
        <li><a href="#">当前位置</a></li>
        <li><a href="/<%=@@projectName%>/<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>s"><%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>管理</a></li>
        <li class="active">查看<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>信息</li>
      </ol>
      <!-- 数据信息展现列表  -->
      <div class="form-input">
      <form class="form-horizontal">
        <% @@bean.columns.each do |p|%>
          <% if p.last.eql? "Long"%><div class="form-group">
            <span class="col-sm-2 control-label"><%=p.first%></span>
            <div class="col-sm-10">
              <select name="<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>.<%=p.first%>" class="form-control" disabled="disabled">
                  <option value="<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>.<%=p.first%>"> <%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>.<%=p.first%> </option>
              </select>
            </div>
          </div><% elsif p.last.eql? "Date" %><div class="form-group">
            <span class="col-sm-2 control-label"><%=p.first%></span>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>.<%=p.first%>" value="<s:date name="<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>.<%=p.first%>" format="yyyy-MM-dd" />" onClick="SelectDate(this,'yyyy-MM-dd')" disabled="disabled"/>
            </div>
          </div><% else %><div class="form-group">
            <span class="col-sm-2 control-label"><%=p.first%></span>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>-<%=p.first%>" name="<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>.<%=p.first%>" value="${<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>.<%=p.first%>}" disabled="disabled">
            </div>
          </div><% end %><% end %>
          <div class="btn-group">
            <button type="button" class="btn btn-info" onclick="location='/<%=@@projectName%>/<%=@@bean.table_name[0].downcase<<@@bean.table_name[1,@@bean.table_name.length]%>s'" >后退</button>
          </div>
      </form>
     </div>
    </div>
  </div>
   <!-- 尾部信息  -->
  <jsp:include page="/WEB-INF/jsp/layout/footer.jsp" />
</body>
</html>
