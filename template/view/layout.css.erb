.main-title {
    height:40px;
    line-height:40px;
    border-top:1px solid #E9E9E9;
    border-bottom:1px solid #E9E9E9;
    background: #F9F9F9;
}
.main-title span{
    display:inline;
    margin-left:20px;
    font-size:16px;
    font-weight:600;
    color:#1E75BA;
}


.main-search {
    min-height:120px;
    background:#F9F9F9;
    margin-bottom:20px;
}
.main-search .form-group{
    width:315px;
    height:32px;
    margin:30px 63px;
    float:left;
}
.main-search .form-group:nth-child(2n+1),
.main-search .form-group:nth-child(2n+3),
.main-search .form-group:nth-child(2n+5){
    margin-right:0px;
}
.main-search .form-group:nth-child(2n+3),
.main-search .form-group:nth-child(2n+4),
.main-search .form-group:nth-child(2n+6){
    margin-top:0px;
}
.main-search div{
    padding:0px;
}
.main-search span {
    padding:0px;
    min-width:100px;
    height:30px;
    padding:5px 0 ;
}
.main-search input {
    width:240px;
}
.main-search button{
    border:1px solid #2270AB;
    height:36px;
    width:140px;
    color:#FFFFFF;
    font-size:15px;
    border-radius:5px;
    margin:0px  0 20px 40%;
    background:#2181CF;
}
.main-search button:hover{
    background:#2194CF;
    border-color:#2194CF;
}

.current-location {
     width:90%;
     height:50px;
     line-height:50px;
     margin:10px auto;
}
.current-location li{
    float:left;
    min-width:80px;
    color:#1260AD;
    font-size:15px;
    list-style:none;
}


.add-btn {
    float:right;
    margin-right:20px;
}
.add-btn button{
    border:1px solid #2270AB;
    height:35px;
    line-height:35px;
    width:89px;
    color:#FFFFFF;
    font-size:15px;
    border-radius:5px;
    background:#2181CF;
}
.add-btn button:hover{
    background:#2194CF;
    border-color:#2194CF;
}

.footer-main {
    width:1024px;
    margin:0 auto;
    text-align:center;
}